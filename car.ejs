<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
  <%- include('../partials/header') %>

  <div style="max-width:1100px;margin:0 auto;padding:16px">
    <h1><%= car.title %></h1>
    <p>
      <strong style="color:#B10101;">💰 <%= formatMoney(car.price) %></strong><br>
      <small style="color:#666;">
        <strong>Año:</strong> <%= car.year %> | 
        <strong>Kilometraje:</strong> <%= car.mileage %> km
      </small>
    </p>

    <!-- Galería de imágenes -->
    <div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(260px,1fr));gap:10px;">
      <% if (images && images.length > 0) { %>
        <% images.forEach(img => { %>
          <img src="/images/<%= img.filename %>" 
               alt="Foto de <%= car.title %>"
               style="width:100%;max-width:400px;border:1px dashed #ccc;margin:10px 0">
        <% }) %>
      <% } else { %>
        <p style="color:#999;">Sin imágenes disponibles.</p>
      <% } %>
    </div>

    <!-- Ficha extendida -->
    <h3>Ficha extendida</h3>
    <div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:10px;margin-top:10px;">
      <div style="border:1px dashed #4DA7F3;padding:10px;">🚗 <strong>Ciudad:</strong> <%= car.city %></div>
      <div style="border:1px dashed #4DA7F3;padding:10px;">🧾 <strong>Factura:</strong> <%= car.title_type %></div>
      <div style="border:1px dashed #4DA7F3;padding:10px;">📋 <strong>Repuve:</strong> <%= car.repuve_status %></div>
      <div style="border:1px dashed #4DA7F3;padding:10px;">🛡️ <strong>Seguro:</strong> <%= car.insurance_status %></div>
      <div style="border:1px dashed #4DA7F3;padding:10px;">🧍‍♂️ <strong>Propietarios:</strong> <%= car.owners %></div>
    </div>

    <!-- Descripción -->
    <h3>Descripción</h3>
    <p><%= car.description || 'Sin descripción' %></p>

    <!-- Historial -->
    <h3>Historial</h3>
    <p><%= car.notes_history || 'Sin notas' %></p>

    <!-- WhatsApp -->
    <a href="<%= waLink %>" 
       style="display:inline-block;background:#B10101;color:white;padding:12px 18px;margin-top:10px;text-decoration:none;border-radius:5px;">
       📲 Contactar por WhatsApp
    </a>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
