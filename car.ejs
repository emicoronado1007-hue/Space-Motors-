<!doctype html><html><head><meta charset="utf-8"><link rel="stylesheet" href="/public/css/styles.css"><title><%= car.title %></title></head><body>
<%- include('../partials/header') %>
<div style="max-width:1100px;margin:0 auto;padding:16px">
  <h1><%= car.title %></h1>
  <div><strong style="color:#B1001A"><%= formatMoney(car.price) %></strong></div>
  <p style="color:#666"><strong>Año:</strong> <%= car.year %> · <strong>Kilometraje:</strong> <%= car.mileage.toLocaleString() %> km · <strong>Ciudad:</strong> <%= car.city %></p>

  <div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(160px,1fr));gap:10px">
    <% images.forEach(img=>{ %><img src="/uploads/<%= img.filename %>" style="width:100%;height:120px;object-fit:cover;border:1px dashed #ccc;border-radius:10px"><% }) %>
  </div>

  <h3>Ficha extendida</h3>
  <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:10px">
    <div style="border:1px dashed #D4AF37;padding:10px;border-radius:10px"><strong>VIN:</strong> **** <%= (car.vin||'').slice(-6) %></div>
    <div style="border:1px dashed #D4AF37;padding:10px;border-radius:10px"><strong>Dueños:</strong> <%= car.owners ?? 'N/D' %></div>
    <div style="border:1px dashed #D4AF37;padding:10px;border-radius:10px"><strong>REPUVE:</strong> <%= car.repuve_status %></div>
    <div style="border:1px dashed #D4AF37;padding:10px;border-radius:10px"><strong>Carro de seguro:</strong> <%= car.insurance_status %></div>
    <div style="border:1px dashed #D4AF37;padding:10px;border-radius:10px"><strong>Factura:</strong> <%= car.title_type %></div>
  </div>

  <h3>Descripción</h3>
  <p><%= car.description || 'Sin descripción' %></p>

  <h3>Historial</h3>
  <p><%= car.notes_history || 'Sin notas' %></p>

  <p><a href="<%= waLink %>" style="display:inline-block;background:#B1001A;color:#fff;padding:10px 16px;border-radius:10px;text-decoration:none">Preguntar por WhatsApp</a></p>
</div>
<%- include('../partials/footer') %>
</body></html>