<!doctype html><html><head><meta charset="utf-8"><title>Inventario • Space Motors</title></head><body>
<%- include('header') %>
<div class="container" style="max-width:1100px;margin:0 auto;padding:16px">
  <h1>Inventario</h1>
  <div class="grid">
    <% cars.forEach(c => { %>
      <a class="card" href="/auto/<%= c.slug %>">
        <div class="thumb">
          <% if(c.cover){ %>
            <img src="/images/<%= c.cover %>" alt="<%= c.title %>">
          <% } else { %>
            <div class="noimg">Sin foto</div>
          <% } %>
        </div>
        <div class="meta">
          <div class="title"><%= c.title %></div>
          <div class="price"><%= formatMoney(c.price) %></div>
          <div class="sub"><%= c.year %> • <%= c.mileage.toLocaleString('es-MX') %> km • <%= c.city %></div>
        </div>
      </a>
    <% }) %>
  </div>
</div>
<%- include('footer') %>
</body></html>
