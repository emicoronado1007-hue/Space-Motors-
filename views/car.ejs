<!doctype html><html><head><meta charset="utf-8"><title><%= car.title %> • Space Motors</title></head><body>
<%- include('header') %>
<div class="container" style="max-width:1100px;margin:0 auto;padding:16px">
  <h1 class="car-title"><%= car.title %> <span><%= car.year %></span></h1>
  <div class="car-top">
    <div class="car-gallery">
      <div class="gal">
        <% images.forEach(img => { %>
          <img src="/images/<%= img.filename %>" alt="<%= car.title %>">
        <% }) %>
      </div>
    </div>
    <div class="car-meta">
      <div class="price"><%= formatMoney(car.price) %></div>
      <div class="sub"><%= car.year %> • <%= car.mileage.toLocaleString('es-MX') %> km • <%= car.city %></div>
      <a class="btn" href="<%= waLink %>" target="_blank" rel="noopener">WhatsApp</a>
    </div>
  </div>
  <div class="car-desc"><p><%= car.description || 'Sin descripción' %></p></div>
</div>
<%- include('footer') %>
</body></html>
